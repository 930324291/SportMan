<resources>

    <style name = "Base.AppTheme" parent = "Theme.AppCompat.Light.NoActionBar">
        <item name = "colorPrimary">@color/colorPrimary</item>
        <item name = "colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name = "colorAccent">@color/colorAccent</item>
        <item name = "android:windowBackground">@color/window_background</item>
    </style>

    <style name = "AppTheme" parent = "Base.AppTheme"></style>

    <style name="MatchWarp">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="WarpWarp">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">?attr/colorAccent</item>
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="tabBackground">@color/tab_bgcolor</item>
        <item name="tabSelectedTextColor">?android:textColorPrimary</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="new_member">
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>
    <style name="new_member_text">
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/md_white_1000</item>
    </style>
    <style name="userNmaePW">
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">6dp</item>
    </style>

    <style name="new_member_edit">
        <item name="android:background">@null</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/md_grey_400</item>
    </style>

    <style name="new_member_btn">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="baseTopBottomMargin">
        <!--<item name="android:layout_marginTop">6dp</item>-->
        <item name="android:layout_marginBottom">6dp</item>
    </style>

    <style name="horizontalWeightStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="centerUserDateEdit">
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="centerUserDateText">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>
    <style name="centerUserDateImg">
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:src">@drawable/right_arrow</item>
    </style>


    <!--水平分割线style-->
    <style name="common_horizontal_division_line_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">#dddddd</item>
    </style>
    <!--垂直分割线style-->
    <style name="common_vertical_division_line_style">
        <item name="android:layout_width">0.5dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">#dddddd</item>
    </style>

    <style name="comment_text">
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="MyRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/food_rating_bar_full</item>
        <item name="android:minHeight">14dp</item>
        <item name="android:maxHeight">100dp</item>
    </style>
    <style name="ComentRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/comment_rating_bar_full</item>
        <item name="android:minHeight">14dp</item>
        <item name="android:maxHeight">40dp</item>
    </style>

    <style name="course_sub_title">
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingRight">6dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="CourseDetailTiamAddressLinear" parent="MatchWarp">
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@color/md_grey_200</item>
    </style>
    <style name="CourseDetailTiamAddress" parent="WarpWarp">
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="CourseDetailEndTime" parent="WarpWarp">
        <item name="android:textColor">@color/text_color</item>
    </style>
    <!--课程详情课程条件信息-->
    <style name="CourseDetailSubHead" parent="WarpWarp">
        <item name="android:textSize">18sp</item>
        <item name="android:paddingBottom">6dp</item>
    </style>

    <style name="CourseDetailSubHeadLinear">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:background">@color/md_white_1000</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="CourseDetailLeftDivider">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">10dp</item>
    </style>

    <style name="PreferentialCodeBtn" parent="MatchWarp">
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:background">@color/preferential_code_bt</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">24sp</item>
    </style>

</resources>
