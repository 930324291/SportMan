<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:adjustViewBounds="true"
    android:paddingTop="@dimen/toolbar_padding_top"
    android:background="@drawable/title_bg"
    android:minHeight="?attr/actionBarSize"
    app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
    app:popupTheme="@style/ThemeOverlay.AppCompat.Light" >

    <TextView
        android:id="@+id/base_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/md_white_1000"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <TextView
        android:text="分享"
        android:id="@+id/base_tv_right_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginRight="10dp"
        android:layout_gravity="right"
        android:textColor="@color/md_white_1000"
        android:textSize="16sp"/>


    <LinearLayout
        android:id="@+id/linear_toobar"
        android:visibility="gone"
        android:padding="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <TextView
            android:textColor="@color/text_color"
            android:background="@drawable/course_left_title_round"
            style="@style/course_sub_title"
            android:id="@+id/title_course"
            android:text="课程"
            android:layout_width="80dp"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="@color/text_color"
            android:id="@+id/public_course"
            android:background="@drawable/course_right_title_normal_round"
            style="@style/course_sub_title"
            android:text="公开课"
            android:layout_width="80dp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/sourse_sub_subtitle"
            android:layout_gravity="center_vertical"
            android:textColor="@color/text_color"
            android:textSize="14sp"
            android:text="羽毛球"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</android.support.v7.widget.Toolbar>