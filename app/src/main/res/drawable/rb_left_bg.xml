<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!--选中时的背景-->
    <item android:state_checked="true">
        <shape>
            <corners android:bottomLeftRadius="20dp" android:topLeftRadius="20dp" android:bottomRightRadius="0dp" android:topRightRadius="0dp"></corners>
            <stroke android:width="1dp" android:color="@color/md_white_1000"></stroke>
            <solid android:color="@color/toolbar_course_bg"></solid>
        </shape>
    </item>

    <!--未选中时的背景-->
    <item>
        <shape>
            <corners android:bottomLeftRadius="20dp" android:topLeftRadius="20dp" android:bottomRightRadius="0dp" android:topRightRadius="0dp"></corners>
            <stroke android:width="1dp" android:color="@color/md_white_1000"></stroke>
            <solid android:color="@android:color/transparent"></solid>
        </shape>
    </item>

</selector>