<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="@color/colorPrimary"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="bottom"
            android:background="@color/background_floating_material_light"/>
        <com.agitation.sportman.widget.CircleImageView
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/bg"
            android:layout_marginTop="32dp"
            app:border_color="@color/background_floating_material_light"
            app:border_width="4dp"/>
    </FrameLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        style="@style/new_member"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:background="@drawable/registered_user"
            android:layout_weight="1"
            style="@style/userNmaePW"
            android:text="用户名:"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <EditText
            android:id="@+id/et_new_phone"
            android:layout_weight="3"
            style="@style/new_member_edit"
            android:hint="请输入手机号"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        style="@style/new_member"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:inputType="number"
            android:id="@+id/et_verification_code"
            style="@style/new_member_edit"
            android:layout_weight="1"
            android:hint="请输入验证码"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <Button
            android:id="@+id/bt_getverrification_code"
            android:layout_weight="1"
            style="@style/new_member_edit"
            android:hint="获取验证码"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        style="@style/new_member"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:background="@drawable/registered_user"
            style="@style/new_member_text"
            android:layout_weight="1"
            android:text="密码:"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <EditText
            android:id="@+id/et_new_password"
            android:inputType="textPassword"
            android:layout_weight="3"
            style="@style/new_member_edit"
            android:hint="请输入密码"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        style="@style/new_member"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:background="@drawable/registered_user"
            style="@style/new_member_text"
            android:layout_weight="1"
            android:text="确认密码:"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <EditText
            android:id="@+id/et_new_password_again"
            android:inputType="textPassword"
            android:layout_weight="3"
            style="@style/new_member_edit"
            android:hint="请再次输入密码"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>

    <Button
        android:background="@drawable/bg_round"
        android:id="@+id/bt_confirm_menber"
        style="@style/new_member_btn"
        android:text="确认注册"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
